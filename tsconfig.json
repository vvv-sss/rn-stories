{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@assets": [
        "./assets/*"
      ],
      "@components_global": [
        "./components/index.ts"
      ],
      "@hooks_global": [
        "./lib/hooks/index.ts"
      ],
      "@constants_global": [
        "./lib/constants/index.ts"
      ],
      "@screens": [
        "./screens/index.ts"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
